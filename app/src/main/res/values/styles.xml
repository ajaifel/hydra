<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppLoadTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/hydra_splash</item>
    </style>
    <style name="Gw2Theme" parent="AppTheme">
        <item name="colorPrimary">@color/gw2Primary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Dota2Theme" parent="AppTheme">
    <item name="colorPrimary">@color/dota2Primary</item>
    <item name="colorAccent">@color/colorBase</item>
    </style>
</resources>
